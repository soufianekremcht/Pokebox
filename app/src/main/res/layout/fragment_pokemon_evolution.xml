<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evolution Chain"
            android:layout_margin="@dimen/spacing_normal"/>


        <GridLayout
            android:id="@+id/evolution_chain_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/base_form_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="@dimen/spacing_normal"
                android:src="@drawable/img_pokemon_bulbasaur"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Level 16)"
                android:layout_gravity="center"
                android:layout_toEndOf="@id/base_form_img"/>


            <ImageView
                android:id="@+id/second_form_img"
                android:layout_width="70dp"
                android:layout_margin="@dimen/spacing_normal"
                android:layout_height="70dp"
                android:layout_toEndOf="@id/second_form_img"
                android:src="@drawable/img_pokemon_chikorita"
                />


            <ImageView
                android:id="@+id/starting_second_form_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="@dimen/spacing_normal"
                android:src="@drawable/img_pokemon_chikorita"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Level 30)"
                android:layout_gravity="center"
                android:layout_below="@id/base_form_img"/>


            <ImageView
                android:id="@+id/final_form_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/img_pokemon_bulbasaur"
                android:layout_margin="@dimen/spacing_normal"
                />






        </GridLayout>


    </LinearLayout>

</layout>