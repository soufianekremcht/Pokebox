<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground">


        <TextView
            android:id="@+id/poke_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_toStartOf="@+id/poke_news_img_card"
            android:maxLines="2"
            android:minLines="1"
            android:padding="@dimen/spacing_small"
            android:text="Pokemon Rumble Rush \n Arrives Soon"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/poke_news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/poke_news_title"

            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_small"
            android:paddingStart="@dimen/spacing_small"
            android:paddingEnd="0dp"
            android:text="15 May 2021" />

        <androidx.cardview.widget.CardView
            android:id="@+id/poke_news_img_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/spacing_normal"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/poke_news_image"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/img_thumbnail" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>